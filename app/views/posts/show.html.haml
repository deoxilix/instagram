.posts-wrapper.row
  .post
    .post-head
      .name
        deoxilix

      .caption
        = @post.caption

    .image.center-block
      = image_tag @post.image, class: 'img-responsive'
    .text-right
      =link_to "Edit", edit_post_path
      |
      =link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }
      |
      =link_to "Flow", root_path
